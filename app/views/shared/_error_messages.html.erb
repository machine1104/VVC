<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      La form contiene <%= pluralize(object.errors.count, "errore") %>:<br/><br/>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>