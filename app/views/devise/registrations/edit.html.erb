<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
  </div>
  
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "nome", class: "form-control form-control-sm" %>
  </div>
  
  <div class="field">
    <%= f.label :cognome %><br />
    <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome", class: "form-control form-control-sm" %>
  </div>
  
  <div class="field">
    <%= f.label :indirizzo %><br />
    <%= f.text_field :indirizzo, autofocus: true, autocomplete: "indirizzo", class: "form-control form-control-sm" %>
  </div>
  
  <div class="field">
    <%= f.label :comune %><br />
    <%= f.text_field :comune, autofocus: true, autocomplete: "comune", class: "form-control form-control-sm" %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% if !user_signed_in_with_provider? %>
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-sm" %>
    </div>
  <% end %>

  

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-form" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-form" %></p>

<%= link_to "Back", :back, class: "btn btn-form" %>
