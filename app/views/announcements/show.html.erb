<!-- Page Content -->
<div class="container" id="show">

  <!-- Portfolio Item Heading -->
  <h1 class="my-4">
    <%= @announcement.titolo %>
  </h1>
    <div class="col-md-6">
      <div id="myGallery" class="carousel slide" data-ride="carousel" data-interval="false">
        <ul class="carousel-indicators">
          <li data-target="#demo" data-slide-to="0" class="active"></li>
          <li data-target="#demo" data-slide-to="1"></li>
          <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag @announcement.immagine_1.url, class: "img-responsive" if @announcement.immagine_1? %>
          </div>
          <div class="item">
            <%= image_tag @announcement.immagine_2.url, class: "img-responsive" if @announcement.immagine_2? %>
          </div>
          <div class="item">
            <%= image_tag @announcement.immagine_3.url, class: "img-responsive" if @announcement.immagine_3? %>
          </div>
        </div>
        <!--end carousel-inner-->

        <!--Begin Previous and Next buttons-->
        <a class="left carousel-control" href="#myGallery" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#myGallery"
          role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
      <!--end carousel-->
    </div>

    <div class="col-md-4">
      <h3 class="my-3">Descrizione prodotto</h3>
      <p>
        <%= @announcement.descrizione %>
      </p>
      <h3 class="my-3">Dettagli prodotto</h3>
      <ul>
        <li>Categoria:
          <%= @announcement.categoria %>
        </li>
        <li>Posizione:
          <%= @announcement.posizione %>
        </li>
        <li>Email:
          <%= @announcement.email %>
        </li>
        <li>Telefono:
          <%= @announcement.telefono %>
        </li>
      </ul>
      <h3>
        <%= @announcement.prezzo %>0 â‚¬ </h3>
    </div>

  </div>
  <!-- /.row -->
</div>
<!-- /.container -->