<h2>Edit
  <%= @annoucement.to_s.humanize %>
</h2>

<%= form_for @announcement, url: user_announcement_path(current_user.id), html: { method: :put } do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="field">
  <%= f.label :titolo %><br />
  <%= f.text_field :titolo, autofocus: true, autocomplete: "titolo" %>
</div>

<div class="field">
  <%= f.label :categoria %><br />
  <%= f.select :categoria, ["Arredamento", "Abbigliamento", "Elettronica", "Motori"], autofocus: true, autocomplete: "categoria" %>
</div>

<div class="field">
  <%= f.label :descrizione %><br />
  <%= f.text_area :descrizione, autofocus: true, autocomplete: "descrizione" %>
</div>

<span class="picture">
  <%= f.label 'Immagine 1' %><br />
  <%= f.file_field :immagine_1%>
  <%= f.label 'Immagine 2' %><br />
  <%= f.file_field :immagine_2 %>
  <%= f.label 'Immagine 3' %><br />
  <%= f.file_field :immagine_3 %>
  <%= f.label 'Immagine 4' %><br />
  <%= f.file_field :immagine_4 %>
  <%= f.label 'Immagine 5' %><br />
  <%= f.file_field :immagine_5 %>
</span>

<div class="field">
  <%= f.label :posizione %><br />
  <%= f.text_field :posizione, autofocus: true, autocomplete: "posizione" %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :telefono %><br />
  <%= f.text_field :telefono, autofocus: true, autocomplete: "telefono" %>
</div>

<div class="field">
  <%= f.label :prezzo %><br />
  <%= f.number_field :prezzo, step: :any, autofocus: true, autocomplete: "prezzo" %>
</div>

<div class="actions">
  <%= f.submit "Aggiorna", class: "btn btn-form" %>
</div>
<% end %>

<%= link_to "Indietro", :back, class: "btn btn-form" %>